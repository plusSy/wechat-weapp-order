.page__bd{
    height: 100%;
}
.page__bd{
    padding-bottom: 0;
}
.weui-tab__content{
    padding-top: 45px;
    text-align: center;
}
.weui-navbar__item{
  padding:10px 0;
}
.swiper{margin-top:10px;}

.prompt {
  text-align: center;
  color:#ccc;
}
.prompt image{
  margin-top:100px;
  width:80rpx;
  height: 80rpx;
}
.prompt text {
  display: block;
  margin-top:10px;
}
.item{
  padding:0 15px;
  padding-bottom: 10px;
  margin:10px 0;
  background:#fff;
}
.body::after {
  content: "";
  display: block;
  clear: both;
}
.item .ddimg{
  width:80px;
  height: 80px;
  float: left;
  margin: 0 20rpx 20rpx 0;
}
.item .ddimg image {
  width:100%;
  height: 100%;
}
.item .ddcontent {
  padding-left:15px;
  float:left;
}
.item .ddcontent .h1 {
  font-size: 20px;
  color:#666;
}
.item .ddcontent .p {
  margin-top: 15px;
  color:#666;
  font-size: 14px;
}
.item .ddcontent .p text {
  margin-right:10px;
}
.ddhead{
  border-bottom: 1px solid #eee;
  margin-bottom: 10px;
  padding-bottom: 15px;
  padding-top:10px;
}
.ddhead:after {
  content: "";
  display: block;
  clear: both;
}
.ddhead text{
  margin-top:10px;
}
.ddhead .ddhao{
  font-size:14px;
  color:#666;
  float:left;
}
.ddhead .state{
  font-size: 14px;
  color:#666;
  float: right;
  margin-right: 2px;
}
.ddfooter{
  display: block;
  clear: both;
  border-top: 1px solid #eee;
  margin-top:10px;
  padding-top: 10px;
}
.ddfooter:after{
  content: "";
  display: block;
  clear: both;
}
.ddfooter .btn{
  float: right;
  font-size:12px;
  background: #F5B223;
  padding:8px 15px;
  border-radius: 5px;
  margin-left: 10px;
  color:#fff;
}

.ddfooter .jr{
  font-size:14px;
  color:#666;
}
.ws-address{
  width: 100%;
  color: #3D4245;
  margin-bottom:8px;
  background: #fff;
}
.ws-info{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 13px;
  border-bottom: 1px solid #eee;
}
.ws-name{
  float: left;
  padding-left: 3%;
}
.ws-tel{
  float:right;
  padding-right: 3%;
}
.ws-site{
  width: 100%;
  line-height: 50rpx;
  padding:10rpx 0;
  font-size: 12px;
  border-bottom:1px solid #eee;
}
.ws-site .bill{
  text-align: right;
  width: 94%;
  margin: 0 auto;
  font-size: 23rpx;
}
.ws-site .goods{
  width: 94%;
  margin: 0 auto;
  text-align:left;
  line-height:80rpx;
}
.ws-site .goods image{
  width:80rpx;
  height: 80rpx;
  vertical-align: middle;
  margin-right: 16rpx;
}
.ws-site .goods view{
  width: 20%;
  float: right;
  text-align: right;
}
.ws-action{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 12px;
}
.ws-default{
  width: 40%;
  margin-left: 3%;
  
}
.weui-agree__text {
  color: #3D4245;
}
.weui-agree__checkbox-icon{
  border: 1px solid #666;
}

.weui-agree__checkbox-icon-check{
  margin-top:-13px;
}
.weui-agree{
  padding:0;
}
.ws-default{
  float: left
}
.ws-vanish,.ws-delete{
  float: right;
  margin-right: 10px;
  background-color: #fff;
}
.ws-edit image{
  width:18px;
  height:18px;
  vertical-align: middle;
  margin-right: 5px;
}
.ws-delete image{
  width:18px;
  height:18px;
  vertical-align: middle;
  margin-right: 5px;
}
.weui-tab__panel{
  padding-top:0;
}
scroll-view{
  background: #eee;
}
.ws-delete{
  height:30px;
  width:80px;
  text-align:center;
  line-height:30px;
  border:1px solid #eee;
  margin-top:8px;
  border-radius:3px;
}
.ws-vanish{
  height:30px;
  width:80px;
  text-align:center;
  line-height:30px;
  border:1px solid #eee;
  margin-top:8px;
  border-radius:3px;
}